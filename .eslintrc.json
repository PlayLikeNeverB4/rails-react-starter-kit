{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "16.6.1"
    }
  },
  "globals": {
    "$": false,
    "gon": false
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": [ "JSXElement *" ],
        "SwitchCase": 1,
        "CallExpression": {
          "arguments": "first"
        },
        "MemberExpression": "off"
      }
    ],
    "newline-per-chained-call": "error",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": [
      "warn",
      {
        "allow": [ "warn", "error" ]
      }
    ],
    "no-alert": "error",
    "prefer-spread": "error",
    "eqeqeq": "error",
    "no-extra-semi": "error",
    "semi-spacing": "error",
    "no-multi-spaces": "error",
    "no-var": "error",
    "prefer-const": "error",
    "prefer-arrow-callback": "error",
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "comma-spacing": "error",
    "eol-last": "error",
    "no-mixed-requires": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "key-spacing": "error",
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "arrow-spacing": "error",
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "curly": [
      "error",
      "all"
    ],
    "space-infix-ops": "error",
    "keyword-spacing": "error"
  }
}
